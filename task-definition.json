{
  "containerDefinitions": [
    {
      "name": "app",
      "image": "public.ecr.aws/j5n8s8m1/ikuzo:latest",
      "cpu": 256,
      "memory": 512,
      "essential": true,

      "environmentFiles": [
        { "type": "s3", "value": "arn:aws:s3:::ikuzo-team2/.env" }
      ],

      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/actuator/health || exit 1"],
        "interval": 30,
        "retries": 3,
        "startPeriod": 120,
        "timeout": 20
      },

      "portMappings": [
        { "containerPort": 8000, "protocol": "tcp" }
      ]
    },

    {
      "name": "nginx",
      "image": "public.ecr.aws/j5n8s8m1/ikuzo-nginx:latest",
      "cpu": 128,
      "memory": 128,
      "essential": true,

      "dependsOn": [
        { "containerName": "app", "condition": "START" }
      ],

      "portMappings": [
        { "containerPort": 80, "hostPort": 80, "protocol": "tcp" }
      ]
    }
  ],
  "cpu": "256",
  "enableFaultInjection": false,
  "executionRoleArn": "arn:aws:iam::867930415693:role/ecsTaskExecutionRole",
  "family": "ikuzo-task",
  "memory": "512",
  "networkMode": "bridge",
  "placementConstraints": [],
  "registeredAt": "2025-10-13T05:17:23.828Z",
  "registeredBy": "arn:aws:iam::867930415693:root",
  "requiresCompatibilities": [
    "EC2"
  ],
  "status": "ACTIVE"
}